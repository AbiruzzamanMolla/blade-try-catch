{
    "name": "azmolla/blade-try-catch",
    "description": "Blade directives for try-catch-finally blocks in Laravel Blade templates",
    "type": "library",
    "license": "MIT",
    "version": "0.0.3",
    "publisher": "azmolla",
    "keywords": [
        "laravel",
        "try-catch",
        "blade",
        "error-handling"
    ],
    "authors": [
        {
            "name": "Abiruzzaman Molla",
            "email": "abiruzzaman.molla@gmail.com",
            "role": "Backend Developer"
        }
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/AbiruzzamanMolla/blade-try-catch.git"
    },
    "bugs": {
        "url": "https://github.com/AbiruzzamanMolla/blade-try-catch/issues"
    },
    "homepage": "https://github.com/AbiruzzamanMolla/blade-try-catch",
    "require": {
        "php": "^7.1 || ^8.0",
        "illuminate/support": "5.8.*|6.*|7.*|8.*|^9.0|^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "orchestra/testbench": "4.*|5.*|6.*|7.*|8.*|9.*|10.*"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "autoload": {
        "psr-4": {
            "Azmolla\\BladeTryCatch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Azmolla\\BladeTryCatch\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Azmolla\\BladeTryCatch\\BladeTryCatchServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "pest"
    }
}
